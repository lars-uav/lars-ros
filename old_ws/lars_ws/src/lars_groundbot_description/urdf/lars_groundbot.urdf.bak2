<?xml version="1.0"?>
<robot name="lars_groundbot" xmlns:xacro="http://ros.org/wiki/xacro">

    <!-- Define material -->
    <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
    </material>

    <!-- Base Link -->
    <link name="base_link">
        <inertial>
            <mass value="5.0"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0"
                     iyy="0.1" iyz="0.0"
                     izz="0.1"/>
        </inertial>

        <visual>
            <geometry>
                <mesh filename="package://lars_groundbot_description/meshes/lars_groundbot.dae" scale="0.01 0.01 0.01"/>
            </geometry>
            <material name="green"/>
        </visual>

        <collision>
            <geometry>
                <box size="0.5 0.5 0.2"/>
            </geometry>
        </collision>
    </link>

    <!-- Left Wheel -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="-0.2 0.3 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    
    <link name="left_wheel">
        <inertial>
            <mass value="0.5"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0"
                     iyy="0.01" iyz="0.0"
                     izz="0.01"/>
        </inertial>
        
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="green"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>
    </link>

    <!-- Right Wheel -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.2 0.3 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="green"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>
    </link>

</robot>
